    <VideoView
        android:id="@+id/videoView"
        android:layout_width="413dp"
        android:layout_height="232dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout2"
        app:layout_constraintStart_toStartOf="@+id/frameLayout2"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <VideoView
        android:id="@+id/videoViewLand"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout2"
        app:layout_constraintStart_toStartOf="@+id/frameLayout2"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/isologotipoVirtualTrends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoView" />

    <View
        android:id="@+id/lineaSuperior"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@id/textView"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:background="#F7F7F2"
        app:layout_constraintBottom_toTopOf="@+id/nuestroServicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,NotSibling" />

    <View
        android:id="@+id/lineaInferior"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/textView"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:background="#F7F7F2"
        app:layout_constraintBottom_toBottomOf="@+id/nuestroServicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,NotSibling" />

    <TextView
        android:id="@+id/nuestroServicio"
        android:layout_width="221dp"
        android:layout_height="46dp"
        android:layout_marginBottom="144dp"
        android:fontFamily="@font/josefin_sans"
        android:gravity="center_vertical"
        android:text="NUESTRO SERVICIO"
        android:textColor="#F7F7F2"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/videoView"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/bodyScanIntro"
        android:layout_width="227dp"
        android:layout_height="51dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:fontFamily="@font/archivo_regular"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textAllCaps="false"
        android:textColor="#F7F7F2"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/invitacion2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nuestroServicio"
        tools:text="Para saber en qué consiste nuestro: body scan  " />

    <EditText
        android:id="@+id/invitacion2"
        android:layout_width="216dp"
        android:layout_height="68dp"
        android:ems="10"
        android:fontFamily="@font/archivo_regular"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="¡los invitamos a ver el siguiente video en donde podrán ver nuestro escáner corporal en plena acción!"
        android:textColor="#CC8F9BED"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/videoView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/playPauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="180dp"
        android:text="Play/Pause"
        android:textColorLink="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="0dp"
        android:text="Stop"
        android:textColorLink="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:layout_width="103dp"
        android:layout_height="21dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="265dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="80dp" />

</androidx.constraintlayout.widget.ConstraintLayout>